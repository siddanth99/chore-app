// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model with role-based access
model User {
  id             String   @id @default(cuid())
  name           String
  email          String   @unique
  hashedPassword String
  role           UserRole @default(CUSTOMER)
  bio            String?
  avatarUrl      String?
  baseLocation   String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  createdChores         Chore[]                @relation("ChoreCreator")
  assignedChores        Chore[]                @relation("ChoreWorker")
  applications          Application[]
  ratingsGiven          Rating[]               @relation("RatingFrom")
  ratingsReceived       Rating[]               @relation("RatingTo")
  sentMessages          ChatMessage[]          @relation("MessageFrom")
  receivedMessages      ChatMessage[]          @relation("MessageTo")
  cancellationRequests  CancellationRequest[]
  paymentsFrom          Payment[]              @relation("PaymentFrom")
  paymentsTo            Payment[]              @relation("PaymentTo")
  notifications         Notification[]
  notificationPreference UserNotificationPreference?
  notificationDeliveries NotificationDelivery[]

  // NextAuth relations
  accounts Account[]
  sessions Session[]

  @@map("users")
}

enum UserRole {
  CUSTOMER
  WORKER
  ADMIN
}

// Chore model
model Chore {
  id               String      @id @default(cuid())
  title            String
  description      String
  type             ChoreType
  status           ChoreStatus @default(DRAFT)
  category         String
  budget           Int?
  agreedPrice      Int?
  paymentStatus    ChorePaymentStatus @default(NONE)
  imageUrl         String?
  locationAddress  String?
  locationLat      Float?
  locationLng      Float?
  dueAt            DateTime?
  createdById      String
  assignedWorkerId String?
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt

  // Relations
  createdBy            User                 @relation("ChoreCreator", fields: [createdById], references: [id], onDelete: Cascade)
  assignedWorker       User?                @relation("ChoreWorker", fields: [assignedWorkerId], references: [id])
  applications         Application[]
  ratings              Rating[]
  messages             ChatMessage[]
  cancellationRequests CancellationRequest[]
  payments             Payment[]
  notifications        Notification[]

  @@map("chores")
}

enum ChoreType {
  ONLINE
  OFFLINE
}

enum ChoreStatus {
  DRAFT
  PUBLISHED
  ASSIGNED
  IN_PROGRESS
  COMPLETED
  CANCELLATION_REQUESTED
  CANCELLED
}

// Application model (worker's bid/application)
model Application {
  id        String            @id @default(cuid())
  choreId   String
  workerId  String
  bidAmount Int?
  message   String?
  status    ApplicationStatus @default(PENDING)
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt

  // Relations
  chore  Chore @relation(fields: [choreId], references: [id], onDelete: Cascade)
  worker User  @relation(fields: [workerId], references: [id], onDelete: Cascade)
  notifications Notification[]

  @@unique([choreId, workerId])
  @@map("applications")
}

enum ApplicationStatus {
  PENDING
  ACCEPTED
  REJECTED
  WITHDRAWN
}

// Rating model
model Rating {
  id         String   @id @default(cuid())
  choreId    String
  fromUserId String
  toUserId   String
  score      Int // 1-5
  comment    String?
  createdAt  DateTime @default(now())

  // Relations
  chore    Chore @relation(fields: [choreId], references: [id], onDelete: Cascade)
  fromUser User  @relation("RatingFrom", fields: [fromUserId], references: [id], onDelete: Cascade)
  toUser   User  @relation("RatingTo", fields: [toUserId], references: [id], onDelete: Cascade)

  @@unique([choreId, fromUserId])
  @@map("ratings")
}

// ChatMessage model
model ChatMessage {
  id         String   @id @default(cuid())
  choreId    String
  fromUserId String
  toUserId   String
  content    String
  createdAt  DateTime @default(now())

  // Relations
  chore    Chore @relation(fields: [choreId], references: [id], onDelete: Cascade)
  fromUser User  @relation("MessageFrom", fields: [fromUserId], references: [id], onDelete: Cascade)
  toUser   User  @relation("MessageTo", fields: [toUserId], references: [id], onDelete: Cascade)

  @@map("chat_messages")
}

// NextAuth models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

enum CancellationRequestStatus {
  PENDING
  APPROVED
  REJECTED
}

enum PaymentDirection {
  CUSTOMER_TO_OWNER
  OWNER_TO_WORKER
}

enum PaymentMethod {
  CASH
  UPI
  BANK_TRANSFER
  CARD
  OTHER
}

enum ChorePaymentStatus {
  NONE
  CUSTOMER_PARTIAL
  CUSTOMER_PAID
  SETTLED
}

model CancellationRequest {
  id             String                     @id @default(cuid())
  choreId        String
  requestedById  String
  originalStatus ChoreStatus
  reason         String?
  status         CancellationRequestStatus  @default(PENDING)
  createdAt      DateTime                   @default(now())
  resolvedAt     DateTime?

  chore          Chore  @relation(fields: [choreId], references: [id], onDelete: Cascade)
  requestedBy    User   @relation(fields: [requestedById], references: [id], onDelete: Cascade)

  @@index([choreId])
  @@map("cancellation_requests")
}

// Payment model for internal payment tracking
model Payment {
  id          String           @id @default(cuid())
  choreId     String
  fromUserId  String
  toUserId    String
  amount      Int              // rupees as integer for now
  direction   PaymentDirection
  method      PaymentMethod
  notes       String?
  createdAt   DateTime         @default(now())

  chore   Chore @relation(fields: [choreId], references: [id], onDelete: Cascade)
  fromUser User @relation("PaymentFrom", fields: [fromUserId], references: [id])
  toUser   User @relation("PaymentTo", fields: [toUserId], references: [id])
  notifications Notification[]

  @@map("payments")
}

enum NotificationType {
  APPLICATION_SUBMITTED
  APPLICATION_ACCEPTED
  APPLICATION_REJECTED
  CHORE_ASSIGNED
  CHORE_STATUS_CHANGED
  CANCELLATION_REQUESTED
  CANCELLATION_DECIDED
  PAYMENT_RECORDED
  RATING_RECEIVED
  SYSTEM
}

model Notification {
  id            String           @id @default(cuid())
  userId        String
  user          User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  type          NotificationType
  choreId       String?
  chore         Chore?           @relation(fields: [choreId], references: [id], onDelete: Cascade)
  applicationId String?
  application   Application?     @relation(fields: [applicationId], references: [id], onDelete: Cascade)
  paymentId     String?
  payment       Payment?         @relation(fields: [paymentId], references: [id], onDelete: Cascade)
  title         String
  message       String
  link          String?
  isRead        Boolean          @default(false)
  createdAt     DateTime         @default(now())

  @@index([userId, isRead])
  @@index([userId, createdAt])
  @@map("notifications")
}

model UserNotificationPreference {
  id        String   @id @default(cuid())
  userId    String   @unique
  email     Boolean  @default(true)
  sms       Boolean  @default(false)
  whatsapp  Boolean  @default(false)
  preferred String?  // "email" | "sms" | "whatsapp" | "any"
  muteFrom  Int?     // hour 0-23 (optional)
  muteTo    Int?     // hour 0-23 (optional)
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_notification_preferences")
}

model NotificationDelivery {
  id               String    @id @default(cuid())
  notificationId   String?
  userId           String
  provider         String    // "pabbly"
  providerResponse String?   @db.Text
  status           String    // "sent" | "failed" | "queued"
  retryCount       Int       @default(0)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@map("notification_deliveries")
}
