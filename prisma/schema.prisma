// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model with role-based access
model User {
  id             String   @id @default(cuid())
  name           String
  email          String   @unique
  hashedPassword String
  role           UserRole @default(CUSTOMER)
  bio            String?
  avatarUrl      String?
  baseLocation   String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  createdChores    Chore[]       @relation("ChoreCreator")
  assignedChores   Chore[]       @relation("ChoreWorker")
  applications     Application[]
  ratingsGiven     Rating[]      @relation("RatingFrom")
  ratingsReceived  Rating[]      @relation("RatingTo")
  sentMessages     ChatMessage[] @relation("MessageFrom")
  receivedMessages ChatMessage[] @relation("MessageTo")

  // NextAuth relations
  accounts Account[]
  sessions Session[]

  @@map("users")
}

enum UserRole {
  CUSTOMER
  WORKER
  ADMIN
}

// Chore model
model Chore {
  id               String      @id @default(cuid())
  title            String
  description      String
  type             ChoreType
  status           ChoreStatus @default(DRAFT)
  category         String
  budget           Int?
  imageUrl         String?
  locationAddress  String?
  locationLat      Float?
  locationLng      Float?
  dueAt            DateTime?
  createdById      String
  assignedWorkerId String?
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt

  // Relations
  createdBy      User          @relation("ChoreCreator", fields: [createdById], references: [id], onDelete: Cascade)
  assignedWorker User?         @relation("ChoreWorker", fields: [assignedWorkerId], references: [id])
  applications   Application[]
  ratings        Rating[]
  messages       ChatMessage[]

  @@map("chores")
}

enum ChoreType {
  ONLINE
  OFFLINE
}

enum ChoreStatus {
  DRAFT
  PUBLISHED
  ASSIGNED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

// Application model (worker's bid/application)
model Application {
  id        String            @id @default(cuid())
  choreId   String
  workerId  String
  bidAmount Int?
  message   String?
  status    ApplicationStatus @default(PENDING)
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt

  // Relations
  chore  Chore @relation(fields: [choreId], references: [id], onDelete: Cascade)
  worker User  @relation(fields: [workerId], references: [id], onDelete: Cascade)

  @@unique([choreId, workerId])
  @@map("applications")
}

enum ApplicationStatus {
  PENDING
  ACCEPTED
  REJECTED
  WITHDRAWN
}

// Rating model
model Rating {
  id         String   @id @default(cuid())
  choreId    String
  fromUserId String
  toUserId   String
  score      Int // 1-5
  comment    String?
  createdAt  DateTime @default(now())

  // Relations
  chore    Chore @relation(fields: [choreId], references: [id], onDelete: Cascade)
  fromUser User  @relation("RatingFrom", fields: [fromUserId], references: [id], onDelete: Cascade)
  toUser   User  @relation("RatingTo", fields: [toUserId], references: [id], onDelete: Cascade)

  @@unique([choreId, fromUserId])
  @@map("ratings")
}

// ChatMessage model
model ChatMessage {
  id         String   @id @default(cuid())
  choreId    String
  fromUserId String
  toUserId   String
  content    String
  createdAt  DateTime @default(now())

  // Relations
  chore    Chore @relation(fields: [choreId], references: [id], onDelete: Cascade)
  fromUser User  @relation("MessageFrom", fields: [fromUserId], references: [id], onDelete: Cascade)
  toUser   User  @relation("MessageTo", fields: [toUserId], references: [id], onDelete: Cascade)

  @@map("chat_messages")
}

// NextAuth models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}
